@model GigHub.ViewModels.GigFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-controller="Gigs" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Venue"></label>
        <input asp-for="Venue" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <select asp-for="Genre" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))" class="form-control">
            <option></option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>